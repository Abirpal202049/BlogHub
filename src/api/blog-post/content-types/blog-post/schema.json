{
  "kind": "collectionType",
  "collectionName": "blog_posts",
  "info": {
    "singularName": "blog-post",
    "pluralName": "blog-posts",
    "displayName": "BlogPost"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "Heading": {
      "type": "string"
    },
    "SubHeading": {
      "type": "text"
    },
    "ThumbnailImage": {
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ],
      "type": "media",
      "multiple": false
    },
    "BlogBody": {
      "type": "richtext"
    },
    "slug": {
      "type": "uid",
      "targetField": "Heading"
    },
    "DateofPublish": {
      "type": "boolean"
    }
  }
}
